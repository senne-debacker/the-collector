<div class="filter-sort">
    <label for="sort-select" class="filter-label">Sort By:</label>
    <select id="sort-select" name="sort" class="filter-select">
        <option value="name">Name (A-Z)</option>
        <option value="name_">Name (Z-A)</option>
        <option value="brewery">Brewery (A-Z)</option>
        <option value="brewery_">Brewery (Z-A)</option>
        <option value="score">Score (Ascending)</option>
        <option value="score_">Score (Descending)</option>
    </select>

    <label for="brewery-filter" class="filter-label">Search Brewery:</label>
    <input id="brewery-filter" type="text" placeholder="Enter brewery name" class="filter-input" />

    <label for="style-filter" class="filter-label">Search Style:</label>
    <input id="style-filter" type="text" placeholder="Enter beer style" class="filter-input" />

    <label for="min-score-filter" class="filter-label">Min. Average Score:</label>
    <input id="min-score-filter" type="number" min="${minScore}" max="${maxScore}" step="0.1" class="filter-input" />

    <label for="max-score-filter" class="filter-label">Max. Average Score:</label>
    <input id="max-score-filter" type="number" min="${minScore}" max="${maxScore}" step="0.1" class="filter-input" />
</div>

<style>
    .filter-sort {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: repeat(5, auto);
        gap: 1.5rem;
        padding: 2rem;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    .filter-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .filter-input, .filter-select {
        padding: 0.5rem;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #ddd;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .filter-input:focus, .filter-select:focus {
        outline: none;
        border-color: #007BFF;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .filter-select {
        cursor: pointer;
    }

    .filter-input {
        height: 2rem;
    }

    .filter-select {
        height: 2.2rem;
    }

    .filter-sort label {
        display: block;
    }
</style>
